<!-- foundation product start  -->
<section class="featured-product padding-top-bottom">
	<div class="container">
		<div class="top-head">
			<p>Goodness of Nature & Power of Science</p>
			<p>We’ve harnessed the potent botanically sourced active ingredients & pure extracts from nature to bring
				you products that go deep beneath the skin’s surface to transform the way your skin looks, feels and
				behaves.</p>
			<h2>Shop Our Bestsellers</h2>
		</div>
		<div id="product-list" class="owl-carousel">
			{% assign collection = collections['all'] %}
			{% for product in collection.products %}

			<div class="product-item">
				{% if product.media %}
				{% assign images = product.media | where: "media_type", "image" %}

				{% assign current_variant = product.selected_or_first_available_variant %}

				{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
				
				<a class="product-image" href="#!"><img src="{{featured_image | img_url: '1024x' }}" alt="{{ image.alt }}"
						width="70%" /></a>
				{% endif %}
				<a href="#!">
					<h6>{{product.title}}</h6>
				</a>

				<div class="price-stars">
					<div class="review-stars">
						<li><a href="#!"><img
									src="https://cdn.shopify.com/s/files/1/0602/5612/5135/files/star.svg?v=1631734338"
									width="20px;" /></a></li>
						<li><a href="#!"><img
									src="https://cdn.shopify.com/s/files/1/0602/5612/5135/files/star.svg?v=1631734338"
									width="20px;" /></a></li>
						<li><a href="#!"><img
									src="https://cdn.shopify.com/s/files/1/0602/5612/5135/files/star.svg?v=1631734338"
									width="20px;" /></a></li>
						<li><a href="#!"><img
									src="https://cdn.shopify.com/s/files/1/0602/5612/5135/files/star.svg?v=1631734338"
									width="20px;" /></a></li>
						<li><a href="#!"><img
									src="https://cdn.shopify.com/s/files/1/0602/5612/5135/files/star.svg?v=1631734338"
									width="20px;" /></a></li>
					</div>
					<div class="reviews">(8 Reviews)</div>
				</div>

				<h5>{{product.compare_at_price_min | money }} <span>{{product.price | money }}</span>
				</h5>
				{% if product.available %}
				<a class="add-to-cart" href="{{ product.url }}">shop now</a>
				{% else %}
				<a class="add-to-cart" href="{{ product.url }}">should out</a>
				{% endif %}
			</div>
			{% endfor %}
		</div>
	</div>
</section>
<!-- foundation product End -->

